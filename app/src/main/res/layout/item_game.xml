<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Button to represent each game entry -->
    <Button
        android:id="@+id/gameButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:background="?android:attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"/>

    <!-- Game name - this will be inside the button -->
    <TextView
        android:id="@+id/gameNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Game Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/gameButton"
        app:layout_constraintTop_toTopOf="@id/gameButton"
        app:layout_constraintEnd_toEndOf="@id/gameButton"/>

    <!-- Player names -->
    <TextView
        android:id="@+id/playerNamesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Player 1, Player 2, Player 3, Player 4"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gameButton"
        app:layout_constraintTop_toBottomOf="@id/gameNameTextView"
        app:layout_constraintEnd_toEndOf="@id/gameButton"
        app:layout_constraintBottom_toBottomOf="@id/gameButton"/>

    <!-- Current score -->
    <TextView
        android:id="@+id/currentScoreTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Team A: 100, Team B: 150"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/gameButton"
        app:layout_constraintTop_toBottomOf="@id/playerNamesTextView"
        app:layout_constraintEnd_toEndOf="@id/gameButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
